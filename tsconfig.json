{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@lunchbreak/*": ["packages/*/src"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "strict": true,
    "target": "ESNext"
  },
  "include": ["packages"],
  "exclude": ["node_modules", "dist"]
}
